# Copy this file to .env.local and fill in your values

# Azure Synapse Connection (Entra ID Authentication)
SYNAPSE_SERVER=your-synapse-workspace.sql.azuresynapse.net
SYNAPSE_DATABASE=your-database-name
SYNAPSE_PORT=1433

# Note: No username/password needed - uses Entra ID authentication
# Ensure you are logged into Azure CLI with: az login

# App Configuration
NEXT_PUBLIC_APP_NAME=Service Performance Dashboard
NEXT_PUBLIC_DEFAULT_SITE=L-FBK
NEXT_PUBLIC_DEFAULT_HORIZON_DAYS=30

# Development mode (set to false for production Synapse)
USE_MOCK_DATA=true